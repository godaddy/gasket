{
  "name": "@gasket/plugin-nextjs",
  "version": "7.2.2",
  "description": "Adds Next support to your application",
  "types": "lib/index.d.ts",
  "files": [
    "generator",
    "docs",
    "lib"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./prompts": "./lib/prompt.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest",
    "test:watch": "pnpm run test --watch",
    "test:coverage": "pnpm run test --coverage",
    "posttest": "pnpm run lint",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "next",
    "nextjs",
    "gasket",
    "plugin"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-plugin-nextjs",
  "dependencies": {
    "@gasket/plugin-webpack": "workspace:^",
    "fastify": "^4.29.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@gasket/assets": "workspace:^",
    "@gasket/core": "workspace:^",
    "@gasket/intl": "workspace:^",
    "@gasket/nextjs": "workspace:^",
    "@gasket/plugin-elastic-apm": "workspace:^",
    "@gasket/plugin-express": "workspace:^",
    "@gasket/plugin-fastify": "workspace:^",
    "@gasket/plugin-https": "workspace:^",
    "@gasket/plugin-intl": "workspace:^",
    "@gasket/plugin-logger": "workspace:^",
    "@gasket/plugin-metadata": "workspace:^",
    "@gasket/plugin-nextjs": "workspace:^",
    "@gasket/plugin-service-worker": "workspace:^",
    "@gasket/plugin-workbox": "workspace:^",
    "@gasket/request": "workspace:^",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "@types/react": "^18.3.18",
    "babel-eslint": "^10.1.0",
    "create-gasket-app": "workspace:^",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy": "^7.1.1",
    "eslint-config-godaddy-react": "^9.1.0",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "jest": "^29.7.0",
    "lodash.merge": "^4.6.2",
    "next": "^14.2.24",
    "nodemon": "^3.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@gasket/plugin-webpack": "^7.1",
    "next": "^14",
    "react": "^18",
    "react-dom": "^18"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "globals": {
      "expect": "readonly"
    },
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "generator/**/*.js"
        ],
        "extends": [
          "godaddy-react"
        ]
      },
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "generator",
    "*.d.ts"
  ],
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "jest": {
    "rootDir": "test"
  }
}
