{
  "name": "@gasket/utils",
  "version": "7.3.0",
  "description": "Reusable utilities for Gasket internals",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./config": {
      "types": "./lib/config.d.ts",
      "default": "./lib/config.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "pnpm run lint && pnpm run typecheck",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "utils"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-utils",
  "dependencies": {
    "chalk": "catalog:",
    "concat-stream": "catalog:",
    "deepmerge": "catalog:",
    "diagnostics": "catalog:",
    "is-plain-object": "catalog:",
    "semver": "catalog:"
  },
  "devDependencies": {
    "@gasket/core": "workspace:^",
    "@types/concat-stream": "catalog:",
    "@types/cross-spawn": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "abort-controller": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "eslint-config-godaddy": "catalog:",
    "eslint-config-godaddy-typescript": "catalog:",
    "eslint-plugin-jest": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "jest": "catalog:",
    "typescript": "catalog:"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "jsdoc/require-jsdoc": "off",
          "jsdoc/require-param-type": "off",
          "jsdoc/require-returns-description": "off"
        }
      },
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/fixtures"
  ]
}
