{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": [
    "test",
    "coverage",
    "cjs"
  ]
}
