{
  "name": "@gasket/plugin-vitest",
  "version": "0.0.1",
  "description": "Integrates Vitest based testing in to your Gasket application",
  "type": "module",
  "types": "lib/index.d.ts",
  "files": [
    "generator",
    "lib",
    "cjs"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./cjs/index.js",
      "default": "./cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "swc lib -d cjs --delete-dir-on-start --strip-leading-paths && cp lib/index.d.ts cjs/",
    "build:watch": "pnpm run build --watch",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "postbuild": "node -e \"require('fs').writeFileSync('cjs/package.json', '{}')\"",
    "posttest": "pnpm run lint && pnpm run typecheck",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": "godaddy/gasket.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "plugin",
    "vitest"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": "https://github.com/godaddy/gasket/issues",
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-plugin-vitest",
  "devDependencies": {
    "@gasket/core": "workspace:*",
    "@gasket/plugin-metadata": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@typescript-eslint/utils": "^8.29.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/eslint-plugin": "^1.1.44",
    "create-gasket-app": "workspace:*",
    "eslint": "^8.57.1",
    "eslint-config-godaddy": "^7.1.1",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-unicorn": "^55.0.0",
    "jsdom": "^26.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:@vitest/legacy-recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "@vitest",
      "jsdoc",
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "generator",
    "cjs"
  ]
}
