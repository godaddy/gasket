{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "ES5",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "routes",
    "plugins",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
