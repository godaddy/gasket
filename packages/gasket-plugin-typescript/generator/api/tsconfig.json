{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "types": [
      {{#if addJestTSType}}
      "jest",
      {{/if}}
      "node"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./plugins",
    "./routes",
    "gasket-data.ts",
    "server.ts",
    "gasket.ts"
  ]
}
