{
  "name": "@gasket/plugin-typescript",
  "version": "7.3.1",
  "description": "Gasket plugin for TypeScript support",
  "types": "lib/index.d.ts",
  "files": [
    "generator",
    "lib"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./prompts": "./lib/prompt.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "posttest": "pnpm run lint && pnpm run typecheck",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": "godaddy/gasket.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "plugin",
    "typescript"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": "https://github.com/godaddy/gasket/issues",
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-plugin-typescript",
  "devDependencies": {
    "@gasket/core": "workspace:*",
    "@gasket/plugin-metadata": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "concurrently": "^9.1.2",
    "create-gasket-app": "workspace:*",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy": "^7.1.1",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  }
}
