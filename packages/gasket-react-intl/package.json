{
  "name": "@gasket/react-intl",
  "version": "6.45.0",
  "description": "React component library to enable localization for gasket apps.",
  "main": "lib",
  "browser": "lib",
  "module": "src",
  "types": "src/index.d.ts",
  "files": [
    "lib",
    "src",
    "types",
    "next.js"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "posttest": "npm run lint",
    "build": "babel src -d lib --delete-dir-on-start",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "react-intl"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "maintainers": [
    "Salil Agrawal <sagrawal@godaddy.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-react-intl",
  "dependencies": {
    "@babel/runtime": "^7.23.8",
    "@gasket/data": "^6.45.0",
    "@gasket/fetch": "^6.45.0",
    "@gasket/helper-intl": "^6.45.0",
    "hoist-non-react-statics": "^3.3.2",
    "just-extend": "^6.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/register": "^7.23.7",
    "@testing-library/react": "^13.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-root-import": "^6.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-godaddy-react": "^9.0.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-unicorn": "^44.0.0",
    "intl": "^1.2.5",
    "jest": "^29.7.0",
    "jsdom": "^20.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.0.0",
    "react-redux": "^8.0.0",
    "setup-env": "^2.0.0"
  },
  "peerDependencies": {
    "@gasket/plugin-intl": "^6.0.0",
    "prop-types": "^15",
    "react-intl": "<7.0.0"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    }
  },
  "eslintIgnore": [
    "lib"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  }
}
