{
  "name": "@gasket/react-intl",
  "version": "7.4.0",
  "description": "React component library to enable localization for gasket apps.",
  "type": "module",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "cjs"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./cjs/index.js",
      "default": "./cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "swc lib -d cjs --delete-dir-on-start --strip-leading-paths && cp lib/index.d.ts cjs/",
    "build:watch": "pnpm run build --watch",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "postbuild": "node -e \"require('fs').writeFileSync('cjs/package.json', '{}')\"",
    "posttest": "pnpm run lint && pnpm run typecheck",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict --experimental-vm-modules' jest",
    "test:coverage": "pnpm run test --coverage",
    "test:watch": "pnpm run test --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": "godaddy/gasket.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "react-intl"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": "https://github.com/godaddy/gasket/issues",
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-react-intl",
  "dependencies": {
    "@gasket/data": "workspace:*",
    "@gasket/fetch": "workspace:*",
    "@gasket/intl": "workspace:*",
    "hoist-non-react-statics": "^3.3.2",
    "htmlescape": "^1.1.1",
    "just-extend": "^6.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "@types/react": "^19.0.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy-react": "^9.1.0",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-unicorn": "^55.0.0",
    "intl": "^1.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^20.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intl": "^7.1.6",
    "react-redux": "^9.2.0",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@gasket/plugin-intl": "workspace:*"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "cjs"
  ]
}
