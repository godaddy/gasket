{
  "name": "@gasket/mocha-plugin",
  "version": "1.3.1",
  "description": "Integrates mocha based testing in to your Gasket application",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js test/*.js generator/**/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "nyc --reporter=text --reporter=json-summary npm run test:runner",
    "test:runner": "mocha --require setup-env --recursive \"test/**/*.*(test|spec).js\"",
    "test:watch": "npm run test:runner -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "keywords": [
    "gasket",
    "plugin",
    "mocha",
    "test"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/master/packages/gasket-mocha-plugin#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-godaddy-react": "^6.0.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-mocha": "^6.0.0",
    "eslint-plugin-react": "^7.14.0",
    "jsdom": "^15.0.0",
    "mocha": "^6.0.0",
    "next": "^8.0.0",
    "nyc": "^14.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "setup-env": "^1.2.2",
    "sinon": "^7.2.3"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ]
      }
    }
  }
}
