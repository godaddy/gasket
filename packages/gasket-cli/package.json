{
  "name": "@gasket/cli",
  "version": "6.45.0",
  "description": "CLI for rapid application development with gasket",
  "main": "src/index.js",
  "bin": {
    "gasket": "./bin/boot"
  },
  "types": "src/index.d.ts",
  "files": [
    "oclif.manifest.json",
    "docs",
    "bin",
    "src"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run test:clean",
    "test": "jest test/unit && npm run lint",
    "test:watch": "jest --watch test/unit",
    "posttest": "npm run lint",
    "prepack": "npm run manifest",
    "postpack": "rimraf oclif.manifest.json",
    "manifest": "cross-env FAUX_ROOT='/path/to/your/app' oclif-dev manifest",
    "test:clean": "rimraf ./test/fixtures/create/myapp"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "cli",
    "oclif",
    "dx"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "maintainers": [
    "Andrew Gerard <agerard@godaddy.com>",
    "Charlie Robbins <charlie.robbins@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-cli",
  "dependencies": {
    "@gasket/engine": "^6.45.0",
    "@gasket/plugin-command": "^6.45.0",
    "@gasket/plugin-git": "^6.45.0",
    "@gasket/plugin-lifecycle": "^6.45.0",
    "@gasket/plugin-metadata": "^6.45.0",
    "@gasket/plugin-start": "^6.45.0",
    "@gasket/resolve": "^6.45.0",
    "@gasket/utils": "^6.45.0",
    "@oclif/command": "^1.8.16",
    "@oclif/config": "^1.18.2",
    "@oclif/core": "^1.2.0",
    "@oclif/parser": "^3.8.6",
    "@oclif/plugin-help": "^5.1.10",
    "@oclif/plugin-not-found": "^2.2.4",
    "@oclif/plugin-warn-if-update-available": "^2.0.4",
    "concat-stream": "^2.0.0",
    "cross-spawn": "^7.0.3",
    "deepmerge": "^4.3.1",
    "getopts": "^2.3.0",
    "glob": "^8.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "6.5.2",
    "json5": "^2.2.3",
    "mkdirp": "^1.0.4",
    "ora": "^3.4.0",
    "pump": "^3.0.0",
    "semver": "^7.5.4",
    "tar-fs": "^2.0.0",
    "untildify": "^4.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.13.31",
    "@oclif/test": "^2.0.0",
    "cross-env": "^7.0.3",
    "diagnostics": "^2.0.2",
    "eslint": "^8.56.0",
    "eslint-config-godaddy": "^7.0.2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-unicorn": "^44.0.0",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error",
      "no-process-env": [
        0
      ],
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "**/node_modules"
  ],
  "gasket": {
    "metadata": {
      "guides": [
        {
          "name": "Configuration Guide",
          "description": "Configuring Gasket apps",
          "link": "docs/configuration.md"
        },
        {
          "name": "Plugins Guide",
          "description": "How to use and author plugins",
          "link": "docs/plugins.md"
        },
        {
          "name": "Presets Guide",
          "description": "How to use and author presets",
          "link": "docs/presets.md"
        },
        {
          "name": "Package Management Guide",
          "description": "Managing dependencies in Gasket apps",
          "link": "docs/package-management.md"
        },
        {
          "name": "Common \"Gotchas\"",
          "description": "Tips and tricks to be aware of",
          "link": "docs/gotchas.md"
        }
      ],
      "commands": [
        {
          "name": "create",
          "description": "Create a new Gasket app",
          "link": "README.md#commands"
        },
        {
          "name": "help",
          "description": "Get usage details for Gasket commands",
          "link": "README.md#commands"
        }
      ],
      "structures": [
        {
          "name": "gasket.config.js",
          "description": "Gasket config for an app",
          "link": "docs/configuration.md"
        },
        {
          "name": "plugins/",
          "description": "One-off plugins for apps",
          "link": "docs/plugins.md#one-off-plugins"
        }
      ],
      "lifecycles": [
        {
          "name": "prompt",
          "description": "Gasket config for an app",
          "link": "README.md#prompt",
          "after": "create"
        },
        {
          "name": "create",
          "description": "App level plugins",
          "link": "README.md#create"
        },
        {
          "name": "postCreate",
          "description": "App level plugins",
          "link": "README.md#postcreate",
          "command": "create",
          "after": "prompt"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "oclif": {
    "commands": "./src/commands",
    "bin": "gasket",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-warn-if-update-available"
    ],
    "hooks": {
      "init": "./src/hooks/init"
    },
    "warn-if-update-available": {
      "timeoutInDays": 7
    },
    "helpClass": "./src/utils/help"
  }
}
