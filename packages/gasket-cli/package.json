{
  "name": "@gasket/cli",
  "version": "7.0.0-next.21",
  "description": "CLI for rapid application development with gasket",
  "main": "lib/index.js",
  "bin": {
    "gasket": "./bin/boot.js"
  },
  "types": "lib/index.d.ts",
  "files": [
    "docs",
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run test:clean",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest test/unit",
    "test:watch": "jest --watch test/unit",
    "posttest": "npm run lint",
    "test:clean": "rimraf ./test/fixtures/create/myapp"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "cli",
    "dx"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "maintainers": [
    "Andrew Gerard <agerard@godaddy.com>",
    "Charlie Robbins <charlie.robbins@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-cli",
  "dependencies": {
    "@gasket/engine": "^7.0.0-next.21",
    "@gasket/plugin-git": "^7.0.0-next.21",
    "@gasket/plugin-logger": "^7.0.0-next.21",
    "@gasket/plugin-metadata": "^7.0.0-next.21",
    "@gasket/plugin-start": "^7.0.0-next.21",
    "@gasket/resolve": "^7.0.0-next.21",
    "@gasket/utils": "^7.0.0-next.21",
    "commander": "^12.0.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.4.5",
    "getopts": "^2.3.0",
    "glob": "^8.1.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "diagnostics": "^2.0.2",
    "eslint": "^8.56.0",
    "eslint-config-godaddy": "^7.0.2",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-unicorn": "^44.0.0",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error",
      "no-process-env": [
        0
      ],
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "**/node_modules"
  ],
  "gasket": {
    "metadata": {
      "guides": [
        {
          "name": "Configuration Guide",
          "description": "Configuring Gasket apps",
          "link": "docs/configuration.md"
        },
        {
          "name": "Plugins Guide",
          "description": "How to use and author plugins",
          "link": "docs/plugins.md"
        },
        {
          "name": "Presets Guide",
          "description": "How to use and author presets",
          "link": "docs/presets.md"
        },
        {
          "name": "Package Management Guide",
          "description": "Managing dependencies in Gasket apps",
          "link": "docs/package-management.md"
        },
        {
          "name": "Common \"Gotchas\"",
          "description": "Tips and tricks to be aware of",
          "link": "docs/gotchas.md"
        }
      ],
      "commands": [
        {
          "name": "create",
          "description": "Create a new Gasket app",
          "link": "README.md#commands"
        },
        {
          "name": "help",
          "description": "Get usage details for Gasket commands",
          "link": "README.md#commands"
        }
      ],
      "structures": [
        {
          "name": "gasket.config.js",
          "description": "Gasket config for an app",
          "link": "docs/configuration.md"
        },
        {
          "name": "plugins/",
          "description": "One-off plugins for apps",
          "link": "docs/plugins.md#one-off-plugins"
        }
      ],
      "lifecycles": [
        {
          "name": "commandOptions",
          "method": "exec",
          "description": "Allows plugins to add CLI options to Gasket",
          "link": "README.md#commandsOptions",
          "parent": "*"
        },
        {
          "name": "commands",
          "method": "exec",
          "description": "Allows plugins to add CLI commands",
          "link": "README.md#commands",
          "parent": "*",
          "after": "commandOptions"
        },
        {
          "name": "init",
          "method": "exec",
          "description": "Signals the start of any Gasket command before it is run",
          "link": "README.md#init",
          "command": "*"
        },
        {
          "name": "configure",
          "method": "execWaterfall",
          "description": "Allows plugins to adjust config before command is run",
          "link": "README.md#configure",
          "command": "*",
          "after": "init"
        },
        {
          "name": "prompt",
          "description": "Gasket config for an app",
          "link": "README.md#prompt",
          "after": "create"
        },
        {
          "name": "create",
          "description": "App level plugins",
          "link": "README.md#create"
        },
        {
          "name": "postCreate",
          "description": "App level plugins",
          "link": "README.md#postcreate",
          "command": "create",
          "after": "prompt"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 8.0.0"
  }
}
