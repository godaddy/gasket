{
  "name": "@gasket/nextjs",
  "version": "7.3.2",
  "description": "Gasket integrations for Next.js apps",
  "type": "module",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./document": {
      "types": "./lib/document/index.d.ts",
      "default": "./lib/document/index.js"
    },
    "./layout": {
      "types": "./lib/layout/index.d.ts",
      "default": "./lib/layout/index.js"
    },
    "./request": {
      "types": "./lib/request/index.d.ts",
      "default": "./lib/request/index.js"
    },
    "./server": {
      "types": "./lib/server/index.d.ts",
      "default": "./lib/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "posttest": "pnpm run lint",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict --experimental-vm-modules' jest",
    "test:coverage": "pnpm run test --coverage",
    "test:watch": "pnpm run test --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": "godaddy/gasket.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "nextjs"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": "https://github.com/godaddy/gasket/issues",
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-nextjs",
  "dependencies": {
    "@gasket/data": "workspace:*",
    "@gasket/request": "workspace:*",
    "hoist-non-react-statics": "^3.3.2",
    "htmlescape": "^1.1.1"
  },
  "devDependencies": {
    "@gasket/plugin-data": "workspace:*",
    "@gasket/plugin-intl": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "@types/react": "^18.3.18",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy-react": "^9.1.0",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-unicorn": "^55.0.0",
    "jest": "^29.7.0",
    "jsdom": "^20.0.3",
    "next": "^14.2.25",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "next": "^14.2.25",
    "react": "^18.3.1"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {}
  }
}
