{
  "name": "@gasket/nextjs",
  "version": "7.3.0",
  "description": "Gasket integrations for Next.js apps",
  "type": "module",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./document": {
      "types": "./lib/document/index.d.ts",
      "default": "./lib/document/index.js"
    },
    "./layout": {
      "types": "./lib/layout/index.d.ts",
      "default": "./lib/layout/index.js"
    },
    "./request": {
      "types": "./lib/request/index.d.ts",
      "default": "./lib/request/index.js"
    },
    "./server": {
      "types": "./lib/server/index.d.ts",
      "default": "./lib/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict --experimental-vm-modules' jest",
    "test:watch": "pnpm run test --watch",
    "test:coverage": "pnpm run test --coverage",
    "posttest": "pnpm run lint",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "nextjs"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-nextjs",
  "dependencies": {
    "@gasket/data": "workspace:^",
    "@gasket/request": "workspace:^",
    "hoist-non-react-statics": "catalog:",
    "htmlescape": "catalog:"
  },
  "devDependencies": {
    "@gasket/plugin-data": "workspace:^",
    "@gasket/plugin-intl": "workspace:^",
    "@jest/globals": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "eslint-config-godaddy-react": "catalog:",
    "eslint-config-godaddy-typescript": "catalog:",
    "eslint-plugin-jest": "catalog:",
    "eslint-plugin-jsx-a11y": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "jest": "catalog:",
    "jsdom": "catalog:",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "next": "^14",
    "react": "^18"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {}
  }
}
