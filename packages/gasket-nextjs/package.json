{
  "name": "@gasket/nextjs",
  "version": "7.0.15",
  "description": "Gasket integrations for Next.js apps",
  "type": "module",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./document": {
      "types": "./lib/document/index.d.ts",
      "default": "./lib/document/index.js"
    },
    "./layout": {
      "types": "./lib/layout/index.d.ts",
      "default": "./lib/layout/index.js"
    },
    "./server": {
      "types": "./lib/server/index.d.ts",
      "default": "./lib/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict --experimental-vm-modules' jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "posttest": "npm run lint && npm run typecheck",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "nextjs"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-nextjs",
  "dependencies": {
    "@gasket/data": "^7.0.15",
    "htmlescape": "^1.1.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy-react": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "jest": "^29.7.0",
    "jsdom": "^20.0.3",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "next": "^14",
    "react": "^18"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    }
  },
  "eslintIgnore": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {}
  }
}
