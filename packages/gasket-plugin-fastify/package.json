{
  "name": "@gasket/plugin-fastify",
  "version": "7.4.2",
  "description": "Adds fastify support to your application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "generator",
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "posttest": "pnpm run lint && pnpm run typecheck",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=strict' jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "repository": "godaddy/gasket.git",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "fastify",
    "gasket",
    "plugin"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "license": "MIT",
  "bugs": "https://github.com/godaddy/gasket/issues",
  "homepage": "https://github.com/godaddy/gasket/tree/main/packages/gasket-plugin-fastify",
  "dependencies": {
    "@fastify/express": "^3.0.0",
    "fastify": "^4.29.1"
  },
  "devDependencies": {
    "@gasket/core": "workspace:*",
    "@gasket/plugin-https": "workspace:*",
    "@gasket/plugin-logger": "workspace:*",
    "@gasket/plugin-metadata": "workspace:*",
    "@types/connect": "^3.4.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "create-gasket-app": "workspace:*",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-godaddy": "^7.1.1",
    "eslint-config-godaddy-typescript": "^4.0.3",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "fastify": "^4.29.1",
    "jest": "^29.7.0",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "fastify": "^4.29.1"
  },
  "eslintConfig": {
    "extends": [
      "godaddy",
      "plugin:jest/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "plugins": [
      "unicorn",
      "jsdoc"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "overrides": [
      {
        "files": [
          "lib/*.ts"
        ],
        "extends": [
          "godaddy-typescript"
        ],
        "rules": {
          "jsdoc/*": "off"
        }
      },
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "jsdoc/require-jsdoc": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "generator"
  ],
  "jest": {
    "rootDir": "test"
  }
}
