{
  "name": "@gasket/plugin-mocha",
  "version": "6.0.12",
  "description": "Integrates mocha based testing in to your Gasket application",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js \"{test,generator}/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:runner",
    "test:runner": "mocha --require setup-env --recursive \"test/**/*.*(test|spec).js\"",
    "test:watch": "npm run test:runner -- --watch",
    "test:coverage": "nyc --reporter=text --reporter=json-summary npm run test:runner",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/gasket.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gasket",
    "plugin",
    "mocha",
    "test"
  ],
  "author": "GoDaddy Operating Company, LLC",
  "maintainers": [
    "Arnout Kazemier <akazemier@godaddy.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/gasket/issues"
  },
  "homepage": "https://github.com/godaddy/gasket/tree/master/packages/gasket-plugin-mocha#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/register": "^7.12.10",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.17.0",
    "eslint-config-godaddy-react": "^6.0.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "jsdom": "^16.4.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "setup-env": "^1.2.2",
    "sinon": "^9.2.3"
  },
  "eslintConfig": {
    "extends": [
      "godaddy-react"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error",
      "max-nested-callbacks": [
        2,
        6
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/transform-runtime"
    ]
  }
}
