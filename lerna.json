{
  "version": "6.43.1",
  "$schema": "https://json.schemastore.org/lerna.json",
  "useWorkspaces": true,
  "useNx": true,
  "packages": [
    "packages/*",
    "scripts/generate-docs-index"
  ],
  "ignoreChanges": [
    "**/*.+(test|spec).js",
    "**/CHANGELOG.md"
  ],
  "command": {
    "publish": {
      "npmClientArgs": [
        "--access",
        "public",
        "--legacy-peers-deps"
      ]
    }
  }
}
