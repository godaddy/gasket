{
  "version": "6.47.0",
  "$schema": "https://json.schemastore.org/lerna.json",
  "useWorkspaces": true,
  "useNx": true,
  "packages": [
    "packages/*",
    "scripts/generate-docs-index"
  ],
  "ignoreChanges": [
    "**/*.+(test|spec).js",
    "**/CHANGELOG.md"
  ],
  "command": {
    "publish": {
      "npmClientArgs": [
        "--legacy-peer-deps",
        "--access",
        "public"
      ]
    }
  }
}
